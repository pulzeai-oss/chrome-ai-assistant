{
  "manifest_version": 3,
  "name": "Pulze.ai - Make life easier with AI",
  "version": "0.1",
  "description": "Pulze.ai enables users to connect daily tools with personalized Spaces, and more for free.",
  "permissions": [
    "identity",
    "storage"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://app.smartlead.ai/*",
    "https://*.pulze.ai/*",
    "https://*.auth0.com/*",
    "https://auth.pulze.ai/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://app.smartlead.ai/*",
        "https://web.whatsapp.com/*"
      ],
      "js": ["content-script.js"],
      "type": "module"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["gmail.js", "smartlead.js", "whatsapp.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "favicon.png",
      "48": "favicon.png",
      "128": "favicon.png"
    }
  },
  "icons": {
    "16": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://auth.pulze.ai https://api.pulze.ai;"
  }
}
